<%- include("partials/header") %>

<h1>Hello, <%= user %></h1>

<h2>Your Reviews</h2>

<div class="container text-center">
  <div class="row row-cols-3">
    <% if (locals.reviews) { %> <% reviews.forEach(rev => { %>
    <div class="col">
      <p><%=rev.title%></p>
      <% for (let i = 0; i < +rev.stars; i++) { %>
      <span class="rating"></span>
      <% } %>
      <p><%=rev.review%></p>
    </div>
    <% }); %> <% } %>
  </div>
</div>

<%- include("partials/footer") %>
