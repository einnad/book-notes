    <h1>Book reviews</h1>

    <h2>Reviews</h2>
    <div class="wrapper">
      <% if (locals.reviews) { %> <% reviews.forEach(rev => { %>
      <div class="review-box">
        <p><%=rev.title%> written by <%=rev.author%></p>
        <p>read by</p>
        <p><%=rev.review%></p>
        <form action="/delete" method="post">
          <input
            type="submit"
            name="deleteId"
            value="Delete review <%= rev.id %>"
          />
        </form>
      </div>
      <% }); %> <% } %>
